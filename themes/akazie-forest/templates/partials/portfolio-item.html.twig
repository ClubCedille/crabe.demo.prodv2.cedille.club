<div class="content-item h-entry">
{% if not hero_image_name %}
    <div class="content-title text-center">
        {% include 'partials/portfolio/title.html.twig' with {title_level: 'h2'} %}
        {% if page.header.subtitle %}
        <h3 >{{ page.header.subtitle }}</h3>
        {% endif %}
        {% include 'partials/portfolio/date.html.twig' %}
        {% include 'partials/portfolio/taxonomy.html.twig' %}
    </div>
{% endif %}
    <div class="e-content">
        {{ page.content|raw }}
    </div>
    <div class="modular-children">
        {% for module in page.collection() %}
        {{ module.content|raw }}
        {% endfor %}
    </div>
    {# {% if page.header.continue_link is same as(true) and config.plugins.comments.enabled %}
        {% include 'partials/comments.html.twig' %}
    {% endif %} #}
</div>

