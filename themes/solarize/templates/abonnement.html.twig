{% extends 'partials/base.html.twig' %}
{% set data_source = data_source|default(page) %}
{% block banner %}

	{% include 'partials/banner.html.twig' %}

{% endblock banner %}

{% block body %}
    {% if page.header.introduction %}
    {% set intro = page.header.introduction %}
        <div class="wrapper style2 evenpart">
            <section class="container">
                <h1>{{ intro.title }}</h1>
                <div>{{ intro.description }}</div>
            </section>
        </div>
    {% endif %}
    
    {% if data_source.header.advantages %}
    {% set advantages = data_source.header.advantages %}
        <div class="wrapper style2 evenpart">
            <section id="team" class="container">
                <header class="major">
                    <h2>{{advantages.title}}</h2>
                </header>
                <div class="row">
                    {% for item in advantages.items %}
                    <div class="3u">
                        <b>{{item.icon}} {{item.title}}</b>
                        <p>{{item.description}}</p>
                    </div>
                    {% endfor %}
                </div>
                <p>{{advantages.note}}</p>
            </section>
        </div>
    {% endif %}

    {% if data_source.header.procedure %}
    {% set procedure = data_source.header.procedure %}
        <div class="wrapper style2 evenpart">
            <section id="team" class="container">
                <header class="major">
                    <h2>{{procedure.title}}</h2>
                </header>
                <div class="row">
                    {% for step in procedure.steps %}
                    <b>{{item.title}}</b>
                    <p>{{item.description}}</p>
                    {% endfor %}
                </div>
                <p>{{advantages.note}}</p>
            </section>
        </div>
    {% endif %}
{% endblock body %}